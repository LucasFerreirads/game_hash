            Height="60" 
            Margin="414,98,0,0" 
            VerticalAlignment="Top"
            Width="60" 
            Background="#FF292727" 
            BorderBrush="{x:Null}" 
            Foreground="White" 
            Click="btn_3_Click"
            FontSize="24" 
