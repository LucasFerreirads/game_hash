            HorizontalAlignment="Left" 
            Height="60"
            Margin="320,98,0,0" 
            VerticalAlignment="Top" 
            Width="65" 
            Background="#FF292727" 
            BorderBrush="{x:Null}" 
            Foreground="White" 
            Click="btn_2_Click"
            FontSize="24" 
            FontWeight="Bold"/>

        <Button 
            x:Name="btn_3"
